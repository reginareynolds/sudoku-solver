#:kivy 1.0.9

<Square@Button>:
    top: root.top
    width: root.width

<Board@GridLayout>:
    top: root.top
    width: root.width
    cols: 3
    rows: 3
    padding: 2
    orientation: 'lr-tb'

<DifficultyScreen>:
    options: difficulty_selection

    GridLayout:
        top: root.top - 10
        cols: 1
        rows: 2
        width: root.width
        padding: [0, 20, 0, 0]
        spacing: [0, 20]

        Label:
            text: "Sudoku"
            font_size: 70
            center_x: root.width/2
            top: root.top 
            height: 70

        GridLayout:
            # pos_hint: {'top': 0.4}
            top: root.top - 100
            width: root.width
            cols: 1
            rows: 2
            row_default_height: (root.top-85)/4

            Label:
                text: "Select a difficulty"
                font_size: 50
                center_x: root.width/2
                top: root.top 
                height: 50    

            GridLayout:
                top: root.top
                width: root.width/2
                column_default_width: root.width/2
                cols: 3
                rows: 1
                padding: 2
                orientation: 'lr-tb'
                id: difficulty_selection

                Button:
                    text: "Easy"
            
                Button:
                    text: "Medium"

                Button:
                    text: "Hard"

<LoadingScreen>:
    progress: scraping_progress

    Label:
        text: "Sudoku"
        font_size: 70
        center_x: root.width/2
        top: root.top 
        height: 70

    RelativeLayout:
