    top: root.top
    width: root.width

<Board@GridLayout>:
    top: root.top
    width: root.width
    cols: 3
    rows: 3
    padding: 2
    orientation: 'lr-tb'

<Screen>:
    board: boxes
    
    GridLayout:
        top: root.top - 10
        cols: 1
